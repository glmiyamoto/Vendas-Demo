<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/ll_nav_menu_item"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="@dimen/nav_menu_item_height"
              android:padding="@dimen/nav_menu_item_padding">

    <ImageView
        android:id="@+id/iv_nav_menu_item_icon"
        android:layout_width="@dimen/nav_menu_item_icon_size"
        android:layout_height="@dimen/nav_menu_item_icon_size"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ico_mensagens" />

    <TextView
        android:id="@+id/tv_nav_menu_item_title"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:paddingLeft="@dimen/nav_menu_item_title_pad_left"
        android:text="Mensagens"
        android:textSize="@dimen/nav_menu_item_title_text_size" />

    <TextView
        android:id="@+id/tv_nav_menu_item_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/bg_counter"
        android:textColor="@android:color/white"
        android:paddingLeft="@dimen/counter_padding_horizontal"
        android:paddingRight="@dimen/counter_padding_horizontal"
        android:paddingTop="@dimen/counter_padding_vertical"
        android:paddingBottom="@dimen/counter_padding_vertical"
        android:textSize="@dimen/counter_text_size"
        android:textStyle="normal|bold"
        android:text="+50" />

</LinearLayout>