<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="101dp"
              android:paddingLeft="16dp">

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="0.6"
        android:gravity="center_vertical"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/tv_sales_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="2"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="Como decorar uma festa infantil maravilhosa"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_sales_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="id 30294080"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sales_text_separator"/>
            <TextView
                android:id="@+id/tv_sales_reg_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11/01/2016"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="0.3"
        android:paddingRight="11dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <ImageView
            android:id="@+id/iv_sales_alert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:src="@drawable/ico_alert"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="0dip"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tv_sales_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:singleLine="true"
            android:ellipsize="none"
            android:text="R$ 1.035,00"/>

    </LinearLayout>

    <View
        android:id="@+id/vw_line"
        android:layout_width="5dp"
        android:layout_height="match_parent"
        android:background="@color/colorSideLineGray"/>

</LinearLayout>